################
# KEY BINDINGS #
################
set $powermenu ~/.local/bin/power.sh
set $floating ~/.local/bin/floating.sh
set $screenshot ~/.local/bin/screenshot.sh

bindsym --to-code {
	# terminal
	$mod+Return exec --no-startup-id foot

	# rofi
	$mod+d exec --no-startup-id rofi -show drun -hide-scrolbar

	# bitwarden
	$mod+b exec --no-startup-id bitwarden-desktop

	# AO To Do
	$mod+a exec --no-startup-id ao

	# Telegram
	$mod+t exec --no-startup-id telegram-desktop

	# Pavucontrol
	$mod+p exec --no-startup-id pavucontrol

	# Whatsapp
	$mod+w exec --no-startup-id whatsapp-nativefier

	# PcMANfm
	$mod+e exec --no-startup-id pcmanfm

	# firefox
	$mod+f exec --no-startup-id firefox

	# leafpad
	$mod+l exec --no-startup-id leafpad

	# power menu
	$mod+f1 --no-startup-id ~/.local/bin/power.sh

	# screenshot
	print exec --no-startup-id ~/.local/bin/screenshot.sh

	# calculator
	$mod+c exec --no-startup-id galculator }
